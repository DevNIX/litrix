{% extends "layout.twig" %}

{% block title %}
    Login
{% endblock %}

{% block content %}

    <div class="container-fluid center-block">
        <div class="col-lg-6 col-md-offset-3 padding-top-50">

                <div class="panel ">

                    <div class="panel-body">
                        <div class="text-center">
                            <img class="login-logo" src="images/logo.png" >
                        </div>
                        <form class="form-signin" role="form" method="post" action="{{ path('login_check') }}">
                            <div class="form-group col-lg-12 login-form-group">
                                <label>Usuario</label>
                                {% if last_username is defined and last_username|length>0 %}
                                    <input type="text" name="_username" class="form-control"  required="required"  value="{{ last_username }}" />
                                {% else %}
                                    <input type="text" name="_username" class="form-control" placeholder="admin" required="required" />
                                {% endif %}
                                <label>Contrase&ntilde;a</label>
                                <input type="password" name="_password" value="" class="form-control" placeholder="foo"  required="required" />

                                    <label>
                                        <input type="checkbox" value="remember-me"> Recordarme
                                    </label>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-lg btn-success login-button ">Entrar</button>
                                </div>

                                {% if error %}
                                    <div class="clearfix" style="padding-bottom: 10px;"></div>
                                    <p class="error-login">Error al autenticar, usuario o contraseña inválidos</p>
                                {% endif %}
                            </div>
                        </form>
                    </div>
                </div>

        </div>
    </div> <!-- /container -->

{% endblock %}