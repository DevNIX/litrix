{% macro getmenu(current) %}


     <div class="row">
         <div class="col-lg-23">
            <nav class="navbar navbar-default navbar-static-top">
            <div class="col-lg-12">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>



                </div>

                <div id="navbar" class="navbar-collapse collapse" aria-expanded="false">
                    <ul class="nav navbar-nav">
                       {% if current!='index' and is_granted('ROLE_ADMIN') %}

                           <li><a class="color-white {% if current == "user_admin" %}active-menu-element{% endif %}" href="{{ path('user_admin') }}">Dash</a></li>

                        {% else %}
                            <li><a class="color-white{% if current == "index" %}active-menu-element{% endif %}">Home</a></li>
                        {% endif %}
                    </ul>
                    {% if current!='index' and is_granted('ROLE_ADMIN') %}
                    <ul class="nav navbar-nav" style = "float: right;">
                        <li><a href="{{ path('user_useredit', {id: 1}) }}"><i class="fa fa-fw fa-power-off"></i> Editar perfil</a></li>
                        <li><a href="{{ path('logout') }}"><i class="fa fa-fw fa-power-off"></i> Salir</a></li>
                    </ul>

                    {% elseif current!='index' and is_granted('ROLE_USER') %}
                        <ul class="nav navbar-nav" style = "float: right;">
                            <li><a href="{{ path('logout') }}"><i class="fa fa-fw fa-power-off"></i> Salir</a></li>
                        </ul>
                    {% endif %}


                </div><!--/.nav-collapse -->
            </div>
        </nav>
         </div>
     </div>


{% endmacro %}